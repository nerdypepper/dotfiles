[colors]
foreground = #ffffff
background = #1b243c
modb = #1b243c
accent_1 = #ff8787
accent_2 = #ff8787
accent_3 = #ff8787

[global/wm]
margin-top = 0
margin-bottom = 0
override-redirect = true

[bar/top]
width = 100%
height = 30
offset-x = 0%
offset-y = 0

locale = de_DE.UTF-8
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = tewi:size=8:antialias=true;
;font-1 = MaterialIcons-Regular :size=10:;
font-1 = icomoon :size=9:;-1

modules-left = date1 volume cpu weather
modules-center = spotipy previous playpause next
modules-right = hlws powermenu

tray-position = off
tray-padding = 2
tray-transparent = false
tray-detached = false
tray-background = ${colors.modb}

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

[module/volume]
type = internal/volume

format-volume = <ramp-volume><label-volume>

format-volume-background = ${colors.modb}
format-volume-padding = 2

module-margin-right = 0
ramp-volume-0 =
ramp-volume-1 =
ramp-volume-2 =
ramp-volume-3 =
ramp-volume-foreground = ${colors.accent_1}


label-muted =  muted

[module/date1]
type = internal/date
interval = 1
date = " %I:%M"
format-prefix = 
format-prefix-foreground = ${colors.accent_1}
format-background = ${colors.modb}
format-padding = 2

[module/powermenu]
type = custom/menu

label-open =
label-open-foreground = ${colors.modb}
label-open-background = ${colors.accent_1}
label-open-padding = 1
label-close =
label-close-padding = 1
label-close-foreground = $[colors.accent_3]
label-separator = |
label-separator-foreground = #666666

menu-0-0 =
menu-0-0-exec = menu-open-1
menu-0-1 =
menu-0-1-exec = menu-open-2
menu-0-2 =
menu-0-2-exec = menu-open-3

menu-1-0 =
menu-1-0-exec = menu-open-0
menu-1-1 =
menu-1-1-exec = systemctl reboot

menu-2-0 =
menu-2-0-exec = systemctl poweroff
menu-2-1 =
menu-2-1-exec = menu-open-0

menu-3-0 =
menu-3-0-exec = herbstclient quit
menu-3-1 =
menu-3-1-exec = menu-open-0

[module/hlws]
type = custom/script
exec = python3 scripts/hlws.py
scroll-down = exec herbstclient use_index +1
scroll-up = exec herbstclient use_index -1
interval = 0.01
format-background = ${colors.modb}
format-padding = 2

[module/previous]
type = custom/script
format-text = <label>
label = 
exec = echo label
click-left = exec playerctl previous
format-foreground = ${colors.accent_2}
format-background = ${colors.modb}
format-padding = 2

[module/next]
type = custom/script
format-text = <label>
label = 
exec = echo label
click-left = exec playerctl next
format-foreground = ${colors.accent_2}
format-background = ${colors.modb}
format-padding = 2

[module/spotipy]
type = custom/script
exec =  python3 ~/scripts/spoti.py
exec-if = pgrep spotify > /dev/null
interval = 0.01
click-left = playerctl -p spotify play-pause
format-background = ${colors.modb}
format-padding = 2

[module/playpause]
type = custom/script
exec = python3 ~/scripts/playpause.py
interval = 0.01
click-left = playerctl -p spotify play-pause
format-foreground = ${colors.accent_2}
format-background = ${colors.modb}
format-padding = 2


[module/cpu]
type = internal/cpu
label = %percentage-core1%%
format-prefix = " "
format-prefix-foreground = ${colors.accent_1}
format-background = ${colors.modb}
format-padding = 2

[module/weather]
type = custom/script
interval = 10
format = <label>
format-padding = 2
format-prefix = " "
format-suffix = "°C"
format-prefix-foreground = ${colors.accent_1}
format-background = ${colors.modb}
exec = python2.7 ~/scripts/weather.py

